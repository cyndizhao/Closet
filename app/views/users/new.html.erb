<%= @user.errors.full_messages.join(',') %>
<br><br>
<div align="center" id="signUp" >
    <br/><br/>
    <div id="signUpform">
      <%= form_for @user do |f| %>
      <h2 style="color: white">Sign Up Here</h2><br>
      <%= f.text_field :first_name, placeholder:"First Name", style:"padding : 5px" %>
      <br><br>
      <%= f.text_field :last_name, placeholder:"Last Name", style:"padding : 5px" %>
      <br><br>

      <%= f.email_field :email, placeholder:"Email", style:"padding : 5px" %>
      <br><br>

      <%# f.text_area :description, rows: 4, placeholder:"Tell us something about you", style:"padding : 5px" %>

      <%= f.password_field :password, placeholder:"Password", style:"padding : 5px" %>
      <br><br>
      <%= f.password_field :password_confirmation, placeholder:"Password Confirmation", style:"padding : 5px"%>
      <br><br>

      <%= f.file_field :selfie, id: "inputImage"%>
      <br>
      <%= f.submit "Sign Up", id:"signUpButton", class: 'btn btn-primary' %>

    <% end %>
  </div>
</div>
<div align="center">
  <br><br>
  <div id="previewImage" style="max-width:450px;" class="col-md-6">
  </div>
</div>
