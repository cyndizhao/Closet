<div class="container">
  <%= form_tag sessions_path do %>

    <div class="form-group">
      <%= email_field_tag :email, '', placeholder: 'Email Address',class: 'form-control input-md' %>
    </div>

    <div class="form-group">
      <%= password_field_tag :password, '', placeholder: 'Password', class: 'form-control input-md' %>
    </div>

    <div class="form-group">
      <%= submit_tag 'Sign In', class: 'btn btn-md btn-primary btn-block input-md' %>
    </div>

  <% end %>
</div>
