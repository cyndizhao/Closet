<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1>STYLITE</h1>
    <p class="lead">Style Is A Way To Say Who You Are Without Having To Speak</p>
  </div>
</div>

<div class="container">
  <!-- Search  -->
  <% if @search_word.present? %>
    <% if @search_posts_ids.present? %>
    <h3>Your Search Result for "<%= @search_word.downcase.capitalize %>":</h3>
    <br>
      <div class="row">
      <% @search_posts_ids.each do |id| %>
        <% p = Post.find(id) %>
        <div class="col-md-4">
          <div class="iPictures" data-interaction="hover">
            <div class="ip_slide">
              <%= image_tag p.picture.url(:medium), class:"img-responsive center-block ip_tooltipImg" %>
              <% p.items.each do |i| %>
                <div class="ip_tooltip ip_img32" style="top: <%= (i.y) * (36/40.0) %>px; left: <%= (i.x) * (36/40.0)%>px;" data-button="moreblue" data-tooltipbg="bgblack" data-round="roundBgW" data-animationtype="ltr-slide">
                  <ul><li><%= Brand.find(i.brand).name %></li><li><%= i.kind %></li><li>$<%= i.price %></li><li><%= i.detail %></li><li><a href="<%= i.link %>">Find item here</a></li></ul>
                </div>
              <% end %>
            </div>
          </div>
          <div class="like-div" style="margin-top:2%;">
            <%= render "partials/like_bookmark_wrapper", p: p %>
          <% if can? :destroy, p%>
            <%= link_to post_path(p), method: :delete, data:{confirm: 'Are you sure?'} do%>
              <i class="fa fa-trash" aria-hidden="true" style="color:black;"></i>
            <% end %>
          <% end %>
          </div>
        </div>
      <% end %>
      </div>
    <% else %>
    <h3>No Relavant Result </h3>
      <div style="height:400px;">
      </div>
    <% end %>
    <br>
    <br>
  <% else %>
  <!-- List of Posts -->
  <div class="row">
    <h2 class="boxtitle">New</h2>
    <div class='list-group gallery'>
      <ul id = "slide2">
        <% @last_posts.each do |p| %>
        <div class="crop">
          <%= link_to post_path(p), remote: true do %>
            <%= image_tag p.picture.url(:medium), class:"img-responsive" %>
          <% end %>
        </div>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="row">
    <h2 class="boxtitle">Trending</h2>
    <div class='list-group gallery'>
      <ul id="slide3">
        <% @most_liked_posts.each do |p| %>
        <div class="crop">
          <%= link_to post_path(p), remote: true do %>
            <%= image_tag p.picture.url(:medium), class:"img-responsive" %>
          <% end %>
        </div>
        <% end %>
    </ul>
    </div>
  </div>
  <% if user_signed_in? %>
  <% list_of_post = [] %>
  <div class="row">
    <h2 class="boxtitle">Looks From People You Follow</h2>
    <div class='list-group gallery'>
      <ul id="slide1">
        <% @friends_new_posts.each do |p| %>
        <div class="crop">
          <%= link_to post_path(p), remote: true do %>
            <%= image_tag p.picture.url(:medium), class:"img-responsive" %>
          <% end %>
        </div>
        <% end %>
      </ul>
    </div>
  </div>

  <!-- follow normal user -->
  <div class="row find_new_friends">
    <h2 class="boxtitle">Find New Friends?</h2>
    <div>
      <% users = User.all %>
      <% counter1 = 1%>
      <% users.each do |u| %>
        <% if !(current_user.people_you_follow_ids.include? u.id) && (counter1 < 7) %>
          <% following = current_user.followings.find_by(user: u) %>
          <% if !following.present? && !(business_user?(u)) && u != current_user%>
          <div class="col-sm-2" style="margin-bottom: 10px;">
            <div class="card" >
                <div class="header-bg header-bg<%= counter1 %>" width="250" height="70" id="header-blur"></div>
                <div class="avatar">
                  <%= image_tag u.selfie.url(:medium), class:"img-responsive center-block" %>
                </div>
                <div class="content">
                  <p><i class="fa fa-user-circle fa-lg" aria-hidden="true"></i>&nbsp;<%= u.first_name.capitalize %></p>
                  <p>Followers: <%= u.followers.count %></p>
                  <p><%= link_to 'Follow',user_followings_path(u), method: :post, class:"btn btn-default"%></p>
                </div>
            </div>
          </div>
          <% counter1 += 1 %>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
  <br>

  <!-- follow business_user -->
  <div class="row">
    <h2 class="boxtitle">Interested In Any Brand?</h2>
    <div>
      <% users = User.all %>
      <% counter2 = 1%>
      <% users.each do |u| %>
        <% if !(current_user.people_you_follow_ids.include? u.id) && (counter2 < 7) %>
          <% following = current_user.followings.find_by(user: u) %>
          <% if !following.present? && business_user?(u) && u!= current_user%>
          <div class="col-sm-2" style="margin-bottom: 10px;">
            <div class="card" >
              <div class="header-bg header-bg<%= counter2 %>" width="250" height="70" id="header-blur"></div>
              <div class="avatar">
                <%= image_tag u.selfie.url(:medium), class:"img-responsive center-block" %>
              </div>
              <div class="content">
                <p><i class="fa fa-diamond fa-lg" aria-hidden="true"></i>&nbsp;<%= u.company_name %></p>
                <p>Followers: <%= u.followers.count %></p>
                <p><%= link_to 'Follow',user_followings_path(u), method: :post, class:"btn btn-default"%></p>
              </div>
            </div>
          </div>
          <% counter2 += 1 %>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
  <% end %>
  <br>


<% end %>
</div>

