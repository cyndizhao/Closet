    <h2 class="boxtitle">Find New Friends?</h2>
    <div>
      <% users = User.all %>
      <% counter1 = 1%>
      <% users.each do |u| %>
        <% if !(current_user.people_you_follow_ids.include? u.id) && (counter1 < 7) %>
        <!-- ??????????????????why people_you_follow_ids only return a single result in rails console?-->
          <% following = current_user.followings.find_by(user: u) %>
          <% if !following.present? && !(business_user?(u))%>
