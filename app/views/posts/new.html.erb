<div class="container-fluid">
  <div class="row">
    <!-- render _sidebar.html.erb -->
    <% if user_signed_in? %>
      <% @user = current_user%>
      <%= render 'partials/sidebar' %>
      <div class="col-md-10 col-sm-8 col-md-offset-2 col-sm-offset-4" id="main-content">

        <div class="container" id="newPost">
        	<div class="row">
        		<div class="col-md-8 col-md-offset-2 col-xs-8 col-xs-offset-2">

              <!-- form start -->

              <h3>Create post</h3>
              <%= form_for @post, id:"newPostForm" do |f| %>
              <div class="form-group">
                <%= f.label "Season" %>
                <%= f.collection_select :category_id, Category.order(:name), :id, :name %>
              </div>
              <div class="form-group">
                <%= f.label :picture %>
                <%= f.file_field :picture, class: 'form-control', id: "inputImage"%>
              </div>
              <div class="form-group">
                <%= f.submit "Create", class:"btn btn-primary"%>
              </div>
              <input type="hidden" id="labels" name="labels">
              <% end %>

              <!-- preview picture -->
              <div id="iPicture" data-interaction="hover">
                <div id="previewImage" class="ip_slide" style="max-width:500px;">
                </div>
              </div>

        			<!-- <div class="form-group">
        				<%# f.label :description %>
        				<%# f.text_area :description, rows:"4", class:"form-control"%>
        			</div> -->

        		</div>
        	</div>
        </div>

      </div>
      <% end %>
  </div>
</div>
